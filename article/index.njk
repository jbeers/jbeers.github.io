---
title: "Articles"
layout: base
---

<h1>Articles</h1>

{% set lastYear = null %}
{% for post in collections.article | reverse %}
  {% set year = post.date | date("yyyy") %}
  {% if year != lastYear %}
    {% if not loop.first %}</ul>{% endif %}
    <h2>{{ year }}</h2>
    <ul>
    {% set lastYear = year %}
  {% endif %}
  <li>
    <a href="{{ post.url }}">{{ post.data.title }}</a>
    <span>({{ post.date | date("yyyy-MM-dd") }})</span>
  </li>
  {% if loop.last %}</ul>{% endif %}
{% endfor %}
